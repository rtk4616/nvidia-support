# Debconf is not used for "configuring" but only for resolving error
# conditions (i.e. leftover stray libraries) interactively.
nvidia-installer-cleanup: no-debconf-config
nvidia-installer-cleanup: postinst-uses-db-input

# The check for stray OpenGL libraries has been moved to a script that is
# called from several postinst scripts only.
nvidia-installer-cleanup: unused-debconf-template nvidia-installer-cleanup/remove-conflicting-libraries
nvidia-installer-cleanup: debconf-is-not-a-registry usr/lib/nvidia/check-for-conflicting-opengl-libraries
